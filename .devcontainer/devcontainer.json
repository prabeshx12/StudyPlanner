{
    "name": "StudyPlanner Dev Container",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "frontend",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "forwardPorts": [
        5173,
        8000
    ],
    "portsAttributes": {
        "5173": {
            "label": "StudyPlanner Frontend",
            "onAutoForward": "openBrowser"
        },
        "8000": {
            "label": "StudyPlanner Backend",
            "onAutoForward": "silent"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.vscode-typescript-next",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ]
        }
    },
    "postCreateCommand": "echo 'StudyPlanner is ready! Use docker-compose up to start both services if they are not already running.'"
}